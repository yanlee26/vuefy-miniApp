page {
    height: 100%;
    width: 100%;
    display: block;
    box-sizing: border-box;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0 0 0 0 rgba(0, 0, 0, 0.25);
    font-family: PingFangSC-Regular,
        Microsoft Yahei,
        -apple-system-font,
        Helvetica Neue,
        Helvetica,
        sans-serif;
}

.row {
    display: block;
}

.cover {
    width: 100%;
    height: 100%;
}

.col {
    display: inline-block;
}

.flex {
    display: flex;
}

.flex-col {
    display: flex;
    flex-direction: column;
}

.flex-row {
    display: flex;
    flex-direction: row;
}

.flex-wrap {
    display: flex;
    flex-wrap: wrap;
}

.flex-bi-center {
    display: flex;
    align-items: center;
    justify-content: center;
}

.flex-center {
    display: flex;
    justify-content: center;
}

.flex-end {
    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
}

.flex-middle {
    display: flex;
    align-items: center;
}

.flex-between {
    display: flex;
    justify-content: space-between;
}

.flex-middle-between {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.pointer-on {
    cursor: pointer;
}

.icon {
    background-position: center;
    background-size: contain;
    background-repeat: no-repeat;
}

.flex-1 {
    flex-grow: 1;
}

.flex-2 {
    flex-grow: 2;
}

.flex-3 {
    flex-grow: 3;
}

.flex-4 {
    flex-grow: 4;
}

.flex-5 {
    flex-grow: 5;
}

.flex-6 {
    flex-grow: 6;
}

.flex-7 {
    flex-grow: 7;
}

.flex-8 {
    flex-grow: 8;
}

.text-center {
    text-align: center;
}

.text-left {
    text-align: left;
}

.text-right {
    text-align: right;
}

.text-ellipsis {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.text-ellipsis-2line {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.break-all {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    white-space: normal;
    word-break: break-all;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

.clear {
    zoom: 1;
}

.clear:after {
    content: '';
    display: block;
    clear: both;
}

.border-box {
    box-sizing: border-box;
}

.main-padding {
    padding: 0 30rpx;
}

.position-center {
    position: absolute;
    width: 50rpx;
    height: 50rpx;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}