.filters {
  display: flex;
}

.filters text {
  margin: 0 10px;
  padding: 10px;
  font-size: 14px;
  border: 1px solid #999;
  border-radius: 4px;
  text-align: center;
  flex: 1;
}

.filters text.active {
  border-color: #09bb07;
  background-color: #09bb07;
  color: #fff;
}

.count {
  margin-bottom: 20px;
  font-weight: 700;
  color: #000;
}

.todo-input {
  border-bottom: 1px solid #ddd;
  padding: 10px;
  margin: 10px;
}
